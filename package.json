{
  "name": "ilookf",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
  "start": "electron .",
  "dev": "concurrently \"npm run dev --prefix client\" \"wait-on http://localhost:5173 && electron .\"",
  "dist": "electron-builder",
  "build": "electron-builder --win"
},
  "build": {
    "appId": "com.ilookf.app",
    "productName": "ILookF",  
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "icon": "icon.ico",
      "target": "nsis"
    }
  },
  "devDependencies": {
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },"nsis": {
  "oneClick": false,
  "allowToChangeInstallationDirectory": true,
  "runAfterFinish": true,
  "createDesktopShortcut": true,
  "createStartMenuShortcut": true
}

}
